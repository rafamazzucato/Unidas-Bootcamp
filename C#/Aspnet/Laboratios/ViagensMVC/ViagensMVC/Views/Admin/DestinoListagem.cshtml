@model IEnumerable<ViagensMVC.Models.Destino>

@{ ViewBag.Title = "DestinoListagem";}


<h2>Destino:Listagem</h2>

<p>@Html.ActionLink("Novo Destino", "DestinoNovo")</p>

<table class="table">
    <tr>
        <th></th>
        <th>Descrição</th>
        <th>Cidade</th>
        <th>País</th>
        <th></th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                <img src="~/Imagens/@item.Foto" style="height:20px" />
            </td>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
            <td>@Html.DisplayFor(modelItem => item.Pais)</td>
            <td>
                @Html.ActionLink("Alterar", "DestinoAlterar", new { id = item.DestinoId }) |
                @Html.ActionLink("Visualizar", "DestinoVisualizar", new { id = item.DestinoId }) |
                @Html.ActionLink("Excluir", "DestinoExcluir", new { id = item.DestinoId })
            </td>
        </tr>
    }
</table>